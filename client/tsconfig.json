{
  "compilerOptions": {
    "target": "esnext",  // or es2020
    "module": "esnext",  // allows the use of import.meta
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "vue"],
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ]
}
